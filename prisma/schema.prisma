generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  income
  expense
}

enum BudgetPeriod {
  monthly
  weekly
  yearly
}

enum RecurringFrequency {
  daily
  weekly
  biweekly
  monthly
  quarterly
  yearly
}

model User {
  id                     String                   @id @default(uuid()) @db.Uuid
  email                  String                   @unique
  passwordHash           String?
  googleId               String?                  @unique
  createdAt              DateTime                 @default(now())
  updatedAt              DateTime                 @updatedAt
  transactions           Transaction[]
  budgets                Budget[]
  goals                  Goal[]
  recurringTransactions  RecurringTransaction[]
  achievements           Achievement[]
  notifications          Notification[]
  userSettings           UserSettings?
  notificationSettings   NotificationSettings?
  autoAllocationSettings AutoAllocationSettings?
  exchangeRates          ExchangeRates?
}

model Transaction {
  id                     String                 @id @default(uuid()) @db.Uuid
  userId                 String                 @db.Uuid
  description            String
  amount                 Decimal                @db.Decimal(14, 2)
  categoryId             Int
  date                   DateTime               @db.Date
  type                   TransactionType
  notes                  String?
  currency               String?
  recurringTransactionId String?                @db.Uuid
  createdAt              DateTime               @default(now())
  updatedAt              DateTime               @updatedAt

  user                  User                  @relation(fields: [userId], references: [id])
  category              Category              @relation(fields: [categoryId], references: [id])
  recurringTransaction  RecurringTransaction? @relation(fields: [recurringTransactionId], references: [id])

  @@index([userId, date])
  @@index([userId, categoryId])
}

model Budget {
  id        String       @id @default(uuid()) @db.Uuid
  userId    String       @db.Uuid
  categoryId Int
  amount    Decimal      @db.Decimal(14, 2)
  period    BudgetPeriod
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  user     User     @relation(fields: [userId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@index([userId])
}

model Goal {
  id            String       @id @default(uuid()) @db.Uuid
  userId        String       @db.Uuid
  name          String
  targetAmount  Decimal      @db.Decimal(14, 2)
  currentAmount Decimal      @db.Decimal(14, 2)
  targetDate    DateTime     @db.Date
  description   String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  user          User          @relation(fields: [userId], references: [id])
  achievements  Achievement[]

  @@index([userId])
}

model RecurringTransaction {
  id            String             @id @default(uuid()) @db.Uuid
  userId        String             @db.Uuid
  description   String
  amount        Decimal            @db.Decimal(14, 2)
  type          TransactionType
  categoryId    Int
  frequency     RecurringFrequency
  startDate     DateTime           @db.Date
  notes         String?
  isActive      Boolean            @default(true)
  lastProcessed DateTime?          @db.Date
  nextDue       DateTime?          @db.Date
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt

  user         User         @relation(fields: [userId], references: [id])
  category     Category     @relation(fields: [categoryId], references: [id])
  transactions Transaction[]

  @@index([userId])
}

model Category {
  id    Int              @id @default(autoincrement())
  name  String
  type  TransactionType
  color String

  transactions          Transaction[]
  budgets               Budget[]
  recurringTransactions RecurringTransaction[]
}

model UserSettings {
  userId          String   @id @db.Uuid
  currency        String
  startingBalance Decimal  @db.Decimal(14, 2)
  currentBalance  Decimal  @db.Decimal(14, 2)

  user User @relation(fields: [userId], references: [id])
}

model NotificationSettings {
  userId                 String  @id @db.Uuid
  billReminders          Boolean @default(true)
  budgetAlerts           Boolean @default(true)
  savingsEncouragement   Boolean @default(true)
  achievementNotifications Boolean @default(true)
  reminderDays           Int     @default(3)
  budgetThreshold        Decimal @db.Decimal(5, 2)
  savingsThreshold       Decimal @db.Decimal(5, 2)

  user User @relation(fields: [userId], references: [id])
}

model AutoAllocationSettings {
  userId        String   @id @db.Uuid
  enabled       Boolean  @default(false)
  percentage    Decimal  @db.Decimal(5, 2)
  priorityOrder String[]

  user User @relation(fields: [userId], references: [id])
}

model Achievement {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String   @db.Uuid
  title       String
  description String
  icon        String
  earned      Boolean  @default(false)
  earnedAt    DateTime?
  goalId      String?  @db.Uuid

  user User @relation(fields: [userId], references: [id])
  goal Goal? @relation(fields: [goalId], references: [id])

  @@index([userId])
}

model Notification {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  type      String
  priority  String
  title     String
  message   String
  icon      String
  color     String
  action    Json
  data      Json
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
}

model ExchangeRates {
  userId                 String   @id @db.Uuid
  rates                  Json
  lastExchangeRateUpdate DateTime?

  user User @relation(fields: [userId], references: [id])
}
